placeholder_color($color)
  &::-webkit-input-placeholder
    color: $color

  &::-moz-placeholder
    color: $color

  &:-ms-input-placeholder
    color: $color

custom_scroll($track)
  scrollbar-color $track rgba(255, 255, 255, .65)
  scrollbar-width thin

  &::-webkit-scrollbar
    height var(--app-scroll-size)
    width var(--app-scroll-size)

  &::-webkit-scrollbar-track
    height var(--app-scroll-size)
    width var(--app-scroll-size)
    background-color $track

  &::-webkit-scrollbar-thumb
    background-color rgba(255, 255, 255, .65)
    border-radius calc(var(--app-scroll-size) / 2)

hidden_scroll()
  scrollbar-width thin

  &::-webkit-scrollbar
    height 0
    width 0

  &::-webkit-scrollbar-track
    height 0
    width 0

clearfix()
  &::before,
  &::after
    content " "
    display table

  &::after
    clear both

img_center()
  position absolute
  transform translate(-50%, -50%)
  top 50%
  left 50%
  min-width 100%
  min-height 100%
  width unset

burger()
  position relative
  padding 0
  display flex
  flex-direction column
  z-index 10

  span
    position relative
    z-index 1
    background #fff
    border-radius 10px
    height 2px
    margin 1px auto
    width 50%
    transition all .4s cubic-bezier(0.68, -0.6, 0.32, 1.6)

burger_open()
  span
    &:nth-of-type(1)
      width 20%
      margin 0
      transform-origin bottom
      transform rotatez(45deg) translate(-2px, 2px)

    &:nth-of-type(2)
      width 44%
      transform-origin top
      transform rotatez(-45deg)

    &:nth-of-type(3)
      margin 0
      transform-origin bottom
      width 20%
      transform translate(2px, -1px) rotatez(45deg)

