          margin-bottom 16px

  &-share
    display flex
    flex-flow row nowrap
    align-items center
    font-weight 500
    font-size 12px
    line-height 15px
    color $gray

    svg
      width 15px
      height 15px
      margin-left 4px

  &-link
    display flex
    flex-flow row nowrap
    align-items center
    font-weight 500
    font-size 12px
    line-height 15px
    color #000

    svg
      width 15px
      height 15px
      margin-left 5px

  &-preview
    overflow hidden
    position relative

    &.__map
      padding-top 10px
      padding-bottom 12px

    //height 110px

    //+above($tab)
    //  height 120px
    //
    //+desktop()
    //  height 152px

    img
      //img_center()
      width 100%
      display block

  &-tags
    display flex
    flex-flow row nowrap
    align-items center

    span
      display block
      padding-left 5px
      position relative
      font-weight 500
      font-size 12px
      line-height 15px
      text-align right
      color #666

      + span

        &::before
          content 'â€¢'
          padding-left 2px
          padding-right 6px

  &-icon
    color #fff
    width 20px
    height 20px
    border-radius 100%
    display flex
    align-items center
    justify-content center

    svg
      width 12px
      height 12px

    &.__blue
      background $blue

    &.__red
      background $red

  &-logo
    display flex
    align-items center
    pointer-events all
    text-decoration none

    &.__link
      color $gray
      cursor pointer
      position relative
      display none

      &::before
        content ''
        position absolute
        top -6px
        bottom -6px
        left -6px
        right -6px

      &:hover
        color $red

      +below($tab - 1px)
        display flex

        + .card-logo
          display none

    .btn-icon
      width 16px
      height 16px

    span
      font-weight 500
      font-size 12px
      line-height 15px

    img
      display block
      width 16px
      height 16px

      + span
        padding-left 8px

  &-href
    color inherit

  &-title
    transition color .3s
    font bold 16px / 21px $fontPTSerif

    .autocomplete-item &
      font 600 14px / 18px $fontInter

      +above($tab)
        padding-left 32px
        padding-right 90px

  &-description
    margin-top 8px
    font-size 14px
    line-height 21px
    color #000

    .section.__black &
      color #fff

    .autocomplete-item &
      display block
      margin-top 5px
      font-weight 400
      font-size 13px
      line-height 18px
      opacity .65

      +above($tab)
        padding-left 32px

      +above($wide)
        padding-right 90px

    +below($tab - 1px)
      display none

  &-info
    padding 12px 0 8px
    display flex
    align-items center
    justify-content space-between

    .autocomplete-item &

      +above($tab)
        position absolute
        top 7px
        right 30px
        left 30px
        pointer-events none

    .hero-scroller &
      padding-top 16px

    .__no-img &
      border-top 1px solid #E8E8E8

  &-footer
    display flex
    align-items center
    padding-bottom 6px

    .map-holder__aside &
      justify-content space-between
      margin-bottom -10px

      +below($tab - 1px)
        display none

    .map-holder__aside .card-title + &
      padding-top 12px

    +above($tab)
      padding-bottom 10px

    .card-date
      flex 1 0 auto
      white-space nowrap
      margin-top 8px

  &-tag
    color #888
    background #EBEBEB
    border-radius 4px
    margin-right 8px
    margin-top 8px
    padding 4px 8px
    font-weight 500
    font-size 12px
    line-height 15px
    overflow hidden
    max-width 100%
    white-space nowrap
    text-overflow ellipsis

    + .card-logo
      margin-left 4px

  &-date
    color #888
    font-weight 500
    font-size 12px
    line-height 15px

  &-views
    color #BBB
    font-weight 500
    font-size 12px
    line-height 15px
    display flex
    align-items center
    pointer-events all

    svg
      width 15px
      height 15px
      margin-right 5px
      fill #BBB

  &:hover
    .card-title
      color $red !important

  .__black &

    .card-info
      border-top-color #454545

    &:not(:hover)
      color #fff

    &:hover
      color #bbb

