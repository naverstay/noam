.grid-sizer
  position absolute
  top 0
  left 0
  opacity 0
  pointer-events none

a.card
  cursor pointer

  &-title
    cursor pointer

  &-logo
    cursor pointer

.card
  display block
  color #000

  .autocomplete-item &
    position relative
    min-height 32px
    cursor pointer
    transition background .3s
    margin-bottom -1px

  .autocomplete-item.autocomplete-selected &
    background #e8e8e8

  &-holder
    position relative
    display flex
    grid-gap 20px

    &.__grid
      margin-bottom 40px
      display block

      .card
        display flex
        flex-flow column
        height 100%

      .card-description
        margin-top 4px

      .card-footer
        margin-top auto
        padding-top 4px

      +below($tab - 1px)
        &:last-child
          margin-bottom 0

      +above($tab)
        display grid
        gap 0
        grid-template-columns repeat(12, 1fr)
        margin-right -20px
        margin-bottom 6px

      +desktop()
        margin-bottom 24px
        margin-right -30px

      +between($wide, $wide + $menu_extra * 2 - 1px)
        .__page-aside &
          margin-right -20px
          margin-bottom 6px

      li
        +below($tab - 1px)
          height auto !important
          width 100%

          &:not(.grid-sizer) + li
            padding-top 18px

            &.__no-img
              border-top 1px solid #E8E8E8
              margin-top 16px
              padding-top 16px

              .card-info
                border-top 0
                padding-top 0

          .card-info
            padding-top 12px

          &.__no-img
            .card
              position relative

              &.__text
                .card-title
                  font bold 16px / 21px $fontPTSerif

                .card-footer
                  padding-bottom 0

                .card-info
                  padding-top 0
                  border 0

              &:not(.__text)
                padding-right 145px
                min-height 110px

                .card-info
                  padding-top 0

                //.card-views
                //  position absolute
                //  bottom 0
                //  left 0

                .card-preview
                  position absolute
                  top 0
                  right 0
                  width 133px
                  height 110px

        .card-preview
          height 124px

          img
            img_center()
            width auto

        &.__w-1
          + li
            border-top 1px solid #E8E8E8
            padding-top 18px

          .card
            position relative

            .card-footer
              padding-bottom 0

            +above($tab)
              padding-left 300px
              min-height 164px

              .card-info
                padding-top 0

                +above($wide)
                  padding-top 5px

              .card-preview
                position absolute
                top 0
                left 0
                width 280px

            +above($wide)
              padding-left 392px

              .card-preview
                width 362px

          .card-preview
            height 164px

          .card-title
            +above($tab)
              font-size 18px
              line-height 24px

            +above($wide)
              font-size 21px
              line-height 26px

        &.__w-2
          .card-preview
            height 148px

          .card-title
            font-size 21px
            line-height 24px

        &.__w-3
          //width 50%
          grid-column span 4

        //+below($tab - 1px)
        //  .card-preview
        //    height 120px

        +above($tab)
          //float left
          //overflow hidden
          //position absolute
          //width 25%
          padding-bottom 22px
          padding-right 20px
          grid-column span 3

          &::before
            //content ''
            display block
            padding-bottom calc(60% + 110px + 40px)

          //.card
          //  position absolute
          //  top 0
          //  left 0
          //  right 20px
          //  bottom 20px
          //  overflow hidden

          //.card-preview
          //  height 48%

          &.__w-1
            //width 50%
            grid-column span 12
            padding-bottom 18px

          &.__w-2
            //width 50%
            grid-column span 6

          &.__w-3
            //width 50%
            grid-column span 4

        &.__h-2
          +above($tab)
            &::before
              padding-bottom calc(100% + 20px)

        //.card-preview
        //  height 63%

        +desktop()
          html:not(.__page-aside) &
            padding-bottom 28px
            padding-right 30px

            &::before
              padding-bottom calc(60% + 65px + 40px)

            //.card
            //  right 30px
            //  bottom 30px

            //.card-preview
            //  height 59%

            &.__no-img .card
              top 15px

            &.__w-2 .card-title
              font-size 24px
              line-height 32px

            &.__h-2
              &::before
                padding-bottom calc(100% + 30px)

    &.__hero
      clearfix()
      display block
      margin-bottom 40px
      grid-column-gap 0

      &.__loaded
        opacity 1

      +below($tab - 1px)
        &:last-child
          margin-bottom 0

      +above($tab)
        margin-right -20px
        margin-bottom 6px

      +desktop()
        margin-bottom 24px
        margin-right -30px

      +between($wide, $wide + $menu_extra * 2 - 1px)
        .__page-aside &
          margin-right -20px
          margin-bottom 6px

      li
        +below($tab - 1px)
          height auto !important
          width 100%

          &:not(.grid-sizer) + li
            border-top 1px solid #E8E8E8
            margin-top 16px
            padding-top 16px

          .card-info
            padding-top 12px

          &:not(.__w-2)
            .card
              position relative

              &.__text
                .card-title
                  font bold 16px / 21px $fontPTSerif

                .card-footer
                  padding-bottom 0

                .card-info
                  padding-top 0
                  border 0

              &:not(.__text)
                padding-right 145px
                min-height 110px

                .card-info
                  padding-top 0

                //.card-views
                //  position absolute
                //  bottom 0
                //  left 0

                .card-preview
                  position absolute
                  top 0
                  right 0
                  width 133px
                  height 110px

                  img
                    img_center()
                    width auto

        &.__w-2
          .card-title
            font-size 21px
            line-height 28px

            +above($tab)
              font-size 24px
              line-height 32px

        //+below($tab - 1px)
        //  .card-preview
        //    height 120px

        +above($tab)
          float left
          //overflow hidden
          //position absolute
          width 25%
          padding-bottom 22px
          padding-right 20px

          &::before
            //content ''
            display block
            padding-bottom calc(60% + 110px + 40px)

          //.card
          //  position absolute
          //  top 0
          //  left 0
          //  right 20px
          //  bottom 20px
          //  overflow hidden

          //.card-preview
          //  height 48%

          &.__w-2
            width 50%

        &.__h-2
          +above($tab)
            &::before
              padding-bottom calc(100% + 20px)

        //.card-preview
        //  height 63%

        +desktop()
          html:not(.__page-aside) &
            padding-bottom 28px
            padding-right 30px

            &::before
              padding-bottom calc(60% + 65px + 40px)

            //.card
            //  right 30px
            //  bottom 30px

            //.card-preview
            //  height 59%

            &.__no-img .card
              top 15px

            &.__w-2 .card-title
              font-size 24px
              line-height 32px

            &.__h-2
              &::before
                padding-bottom calc(100% + 30px)

    &.__hero
      margin-bottom -36px

      .card-title
        font-family $fontInter

        .__black &
          color #fff

      .card-description
        display block

        .__black &
          color $gray

      li.__main
        width 100%

        .card
          +above($tab)
            display grid
            grid-column-gap 20px
            grid-template-areas "img info" "img title" "img text" "img link"
            grid-template-columns 4.3fr 5.6fr

          +above($wide)
            grid-template-columns 1fr 1fr
            grid-column-gap 30px

          +between($wide, $wide + $menu_extra * 2 - 1px)
            .__page-aside &
              grid-column-gap 20px
              grid-template-columns 1fr 1.22fr

        .card-info
          grid-area info

          +above($tab)
            padding-top 0

          +below($tab - 1px)
            padding-bottom 0

        .card-footer
          grid-area link

          +above($tab)
            padding-top 14px

        .card-title
          display inline-block
          font-weight 700
          font-size 24px
          line-height 29px
          padding-top 6px
          grid-area title

          +below($tab - 1px)
            font-size 21px
            line-height 28px
            margin-top 10px

          +above($wide)
            font-size 32px
            line-height 39px

          +between($wide, $wide + $menu_extra * 2 - 1px)
            .__page-aside &
              font-size 24px
              line-height 29px
              padding-top 9px

        .card-description
          font-weight 300
          font-size 14px
          line-height 21px
          grid-area text

        .card-preview
          grid-area img

          +above($tab)
            height 269px

          +above($wide)
            html:not(.__page-aside) &
              height 300px

          img
            img_center()

          +below($tab - 1px)
            height 148px

            img
              img_center()
              width auto

        +above($tab)
          margin-bottom 12px

        .__page-aside &
          +between($wide, $wide + $menu_extra - 1px)

            .card-title
              font-size 24px
              line-height 28px

          +below($wide - 1px)

            margin-bottom 0
            padding-bottom 2px

            .card
              display block

              .card-preview
                height 200px
                margin-top 5px
                margin-bottom 20px

              .card-title
                padding-top 5px

              .card-footer
                display none

          +below($tab - 1px)
            padding-bottom 0

            .card

              .card-preview
                height 100px
                margin-top 5px
                margin-bottom 2px

              .card-title
                padding-top 0
                font-size 18px
                line-height 21px

              .card-description
                font-weight 300
                font-size 12px
                line-height 18px
                letter-spacing -0.02em

      li:not(.__main)
        border-top-color #323232 !important

        .card
          position relative

        .card-description
          font-size 13px
          line-height 20px

        .card-preview
          height 148px

          img
            img_center()

        +above($tab)
          width 50%

        +above($wide + $menu_extra * 2)
          width 33.3333%

        .__page-aside &
          +below($wide + $menu_extra * 2 - 1px)
            margin-top 16px
            padding-top 16px
            padding-bottom 8px
            width 100%
            border-top 1px solid #e8e8e8

            .card
              padding 0 0 0 298px !important
              min-height 140px

              .card-info
                padding-top 5px

              .card-title
                font-size 18px

          +between($tab, $wide + $menu_extra * 2 - 1px)

            .card
              .card-portal
                font-size 13px
                line-height 16px

              .card-description
                font-size 14px
                line-height 21px
                margin-top 6px

              .card-preview
                position absolute
                left 0
                right auto
                width 278px
                height 140px

          +below($tab - 1px)
            padding-bottom 0

            .card
              padding 0 !important
              min-height 78px
              display grid
              grid-column-gap 12px
              grid-template-columns 136px auto
              grid-template-rows auto 1fr auto
              grid-template-areas "preview info" "preview title" "description description"

              .card-title
                font-size 14px
                line-height 18px
                grid-area title

              .card-description
                grid-area description
                font-size 12px
                line-height 18px
                letter-spacing -0.02em
                margin-top 12px

              .card-info
                grid-area info
                padding-top 0

              .card-preview
                position relative
                height 78px
                width 136px
                grid-area preview

