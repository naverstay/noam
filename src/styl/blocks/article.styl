.article
  max-width 815px
  margin 0 auto
  padding 17px 10px 37px

  +above($wide)
    padding-left 30px
    padding-right 30px

  .card-info
    padding 0 0 20px

    .card-views,
    .card-date
      margin-left auto

      + .card-views
        margin-left 15px

    > span
      margin-top 8px

  h1
    margin 25px 0 5px
    font-family PTSerif, serif
    font-weight bold
    font-size 40px
    line-height 46px
    letter-spacing .005em
    max-width 690px

  p
    font-size 14px
    line-height 22px
    letter-spacing -0.01em
    margin 0 0 21px

  &-image
    margin-bottom: 23px

    img
      display block
      max-width 100%

    +above($tab)
      margin 0 -10px 23px

    +above($wide)
      margin 0 -30px 33px

