.article
  max-width 815px
  margin 0 auto
  position relative
  padding 1px 0 23px

  +above($tab)
    padding 10px 0 23px

  +desktop()
    padding 17px 30px 23px

  .card-content
    position relative

  .card-info
    padding 0 0 20px

    .card-views,
    .card-date
      margin-left auto

      + .card-views
        margin-left 15px

    > span
      margin-top 8px

  h1
    margin 25px 0 0
    font-family $fontPTSerif
    font-weight bold
    font-size 24px
    line-height 32px

    +above($tab)
      font-size 36px
      line-height 48px

    +above($dt)
      margin-top 40px

  p
    font-size 14px
    line-height 22px
    letter-spacing -0.02em
    margin 0 0 12px

    +above($tab)
      font-size 16px
      line-height 26px
      margin-bottom 22px

  &-image
    position relative
    overflow hidden
    margin 0 -12px 23px

    //+below($tab - 1px)
    //  min-height 188px
    //
    //  img
    //    img_center()
    //    height 100%

    img
      display block
      width 100%

    +above($tab)
      margin 0 0 33px

    +above($dt)
      &.__fit
        margin-left 0
        margin-right 0

  &-buttons
    margin-right auto
    max-width 40vw

    +above($dt)
      position absolute
      top 0
      right 100%
      margin-right 28px

    &__list
      display flex
      flex-flow row wrap
      gap 8px

      +above($tab)
        gap 16px

      +above($dt)
        flex-flow column nowrap

      .social-link
        width 32px
        height 32px
        border-radius 100%
        display flex
        align-items center
        justify-content center
        cursor pointer
        background #EBEBEB

        svg
          width 16px
          height 16px
          fill #000
          transition fill 0.3s

        &:hover
          svg
            fill $red

  &-controls
    padding 5px 0 32px

    +above($wide)
      padding-bottom 12px

    +below($tab - 1px)
      margin 0 -12px

    &__more
      cursor pointer
      padding 0 3px

      &:not(.__opened)
        ~ *
          display none !important

      &.__opened
        display none

    &.__tags
      padding: 0
      margin: 0 0 32px
      display grid
      grid-template-columns auto 1fr
      font 500  13px / 16px $fontInter
      gap 8px
      color $gray

      dd
        margin-left 0

        a
          transition color .3s
          display inline-block
          margin-bottom 4px
          color #000
          text-decoration underline

          &:hover
            color: $red
            text-decoration none

    &.__info
      display flex
      justify-content flex-end
      align-items center
      padding-top: 40px

      +above($tab)
        padding-top: 20px

    &__icon
      width 15px
      height 15px
      margin-right 6px
      fill #BBB

    &__link
      font-weight 500
      font-size 12px
      line-height 15px
      text-align right
      text-decoration underline
      color #BBB

      &:hover
        color $red

  &-details
    padding-top 14px

    .btn-aside
      margin-bottom 0

      +above($wide)
        margin-bottom 10px

    +above($tab)
      padding-top 14px

    &__list
      li
        position relative
        margin-bottom 6px

        + li
          &::before
            content ''
            position absolute
            left 0
            right 0
            top 5px
            height 1px
            background rgba(232, 232, 232, .5)

      .card-title
        font 600 14px / 18px $fontInter

      .card-description
        margin-top 5px
        display block
        font-size 13px
        line-height 20px

      .card-info
        padding-top 10px
        padding-bottom 7px

        +below($tab - 1px)
          padding-bottom 12px

    &__title
      margin-bottom 10px
      letter-spacing -0.02em
      font 700 21px / 1 $fontInter

    &:not(.__expanded) .article-details__list
      li:nth-child(n + 5)
        display none

  &-collapse
    padding 24px 0 6px

    +above($tab)
      padding 6px 0

    &__footer
      padding 18px 0 20px
      display flex
      justify-content flex-end

      +below($tab - 1px)
        margin 0 -12px

      +above($tab)
        justify-content flex-start

    &__list
      padding 0
      margin 0

      li
        position relative
        color #000
        font-weight 400
        letter-spacing -0.02em
        font-size 14px
        line-height 22px
        padding-left 10px
        padding-bottom 4px

        &::before
          content ''
          position absolute
          top 12px
          left -4px
          width 4px
          height 4px
          border-radius 100%
          background #000

        +above($tab)
          font-size 16px
          line-height 26px
          padding-left 24px

          &::before
            left 10px
            width 6px
            height 6px

    &:not(.__expanded) .article-collapse__list
      li:nth-child(n + 4)
        display none

    &__icon
      width 15px
      height 15px
      margin-right 6px
      fill #BBB

    &__link
      display flex
      font-weight 500
      font-size 14px
      line-height 17px
      color #000

      .btn-icon
        height 20px
        width 20px
        margin-left 7px
        transition transform .3s

        .__expanded.article-collapse &
          transform rotate(180deg)

      &:hover
        color $red
