.article
  max-width 815px
  margin 0 auto
  position relative
  padding 1px 0 23px

  +above($tab)
    padding 10px 28px 23px

  +desktop()
    padding 17px 30px 23px

  .card-content
    position relative

  .card-info
    padding 0 0 20px

    .card-views,
    .card-date
      margin-left auto

      + .card-views
        margin-left 15px

    > span
      margin-top 8px

  h1
    margin 25px 0 0
    font-family $fontPTSerif
    font-weight bold
    font-size 24px
    line-height 32px

    +above($tab)
      font-size 36px
      line-height 48px

    +above($dt)
      margin-top 40px

  p
    font-size 14px
    line-height 22px
    letter-spacing -0.02em
    margin 0 0 22px

    +above($tab)
      font-size 16px
      line-height 26px
      margin-bottom 26px

  &-image
    position relative
    overflow hidden
    margin 0 -12px 23px

    //+below($tab - 1px)
    //  min-height 188px
    //
    //  img
    //    img_center()
    //    height 100%

    img
      display block
      max-width 100%

    +above($tab)
      margin 0 -30px 33px

    +above($dt)
      &.__fit
        margin-left 0
        margin-right 0

  &-buttons
    margin-right auto
    max-width 40vw

    +above($dt)
      position absolute
      top 0
      right 100%
      margin-right 32px

    &__list
      display flex
      flex-flow row wrap
      gap 8px

      +above($tab)
        gap 16px

      +above($dt)
        flex-flow column nowrap

      .social-link
        width 32px
        height 32px
        border-radius 100%
        display flex
        align-items center
        justify-content center
        cursor pointer
        background #EBEBEB

        svg
          width 16px
          height 16px
          fill #000
          transition fill 0.3s

        &:hover
          svg
            fill $red

  &-controls
    padding 5px 0 26px

    &.__info
      display flex
      justify-content flex-end
      align-items center

    &__icon
      width 12px
      height 11px
      margin-right 8px
      fill #BBB

    &__link
      font-weight 500
      font-size 12px
      line-height 15px
      text-align right
      text-decoration underline
      color #BBB

      &:hover
        color $red


