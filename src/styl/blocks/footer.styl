.footer
  background: #222
  display flex
  flex-flow column nowrap
  align-items center
  color: #fff
  text-align: center
  padding: 10px 0 40px

  .nav
    align-items center

    .btn-icon
      width: 16px
      height: 16px
      margin-right: 5px

      &.icon-red
        color: $red

    +above($tab)
      flex-flow row
      margin: 0 -15px
      padding: 5px 0 20px

    li
      padding: 0 15px

  &-nav
    position: relative
    margin-top: 36px

    &::before
      content: ''
      position: absolute
      top: 0
      left: 50%
      width: 100vw
      transform translateX(-50%)
      border-bottom: 1px solid rgba(255, 255, 255, .1)

    +above($tab)
      border-bottom: 1px solid rgba(255, 255, 255, .1)

    +above($wide)
      display flex
      flex-wrap: wrap
      justify-content space-between
      align-items center
      padding-bottom: 24px

      .logo-holder
        padding-bottom: 0

      .nav
        padding: 24px 0 0

    .__page-aside &
      border-bottom: 1px solid rgba(255, 255, 255, .1)

  &-tags
    display flex
    flex-flow row wrap
    gap 8px

    .tag-link
      font-weight: 400
      font-size: 14px
      line-height: 17px
      color: #fff
      background: #333
      padding: 8px 16px

  &-caption
    text-align: left
    padding: 33px 0 16px
    color: #fff
    font: 700 21px/28px $fontPTSerif

    +above($tab)
      margin-top: -10px

  &-socials
    padding-top: 30px

  &-feedback
    padding-top: 15px
    font-size: 14px
    line-height: 20px

    a
      color: rgba(255, 255, 255, .35)
      text-decoration: underline

      &:hover
        color: $red

    +above($tab)
      padding-top: 20px

  &-info
    +above($tab)
      padding-top: 5px
      display flex
      gap 10px
      justify-content space-between

  &-copyright
    color: rgba(255,255,255, .5)
    font-size: 14px
    line-height: 20px
    padding-top: 20px

    a
      color: inherit

      &:hover
        color: $red

  &-socials
    .social-list
      text-align: center

      li
        padding: 0 9px 8px
        display inline-block

    .social-link
      cursor: pointer
      display block

      svg
        width: 16px
        height: 16px
        fill: #fff
        transition fill .3s

      &:hover svg
        fill: $red

  +below($dt - 1px)
    .logo
      font-size: 36px
      line-height: 48px

    .logo-holder
      padding-top: 36px

  +below($tab - 1px)
    padding-top: 2px

    .nav
      padding: 0

    .footer-socials
      padding-top: 22px

    .footer-menu
      padding-top: 10px

      .nav-link
        padding: 14px 0

    .logo
      font-size: 28px
      line-height: 37px

    .logo-holder
      padding-top: 30px

  .__page-aside &
    +above($wide)
      padding-right: var(--home-aside-width)

      .section
        max-width 100%

      .footer-nav::before
        margin-left: calc(var(--home-aside-width) / -2)
