.input
  width: 100%
  padding: 12px 20px

  &.__s-40
    height: 40px

  &.__s-45
    height: 45px


  &-white
    background: #FFFFFF
    border: 1px solid #E8E8E8

.select

  .select2-results__option-icon,
  .select2-selection__value-icon
    padding-right: 5px

    img
      display block

  .select2-results__option-value
    display flex
    align-items center

  .select2-results__option
    padding: 5px 20px

  .select2-dropdown
    border-color: #E8E8E8

  .select2-selection
    .select2-selection__value
      display flex
      align-items center

    .select2-selection__rendered
      padding: 5px 20px

  &.__s-40 .select2-selection
    height: 40px

  &.__s-45 .select2-selection
    height: 45px


  &-white .select2-selection
    border-radius: 0
    background: #FFFFFF
    border: 1px solid #E8E8E8


.form

  &-password__eye
    cursor: pointer
    position: absolute
    transform translateY(-50%)
    top: 50%
    right: 20px
    color: #BBBBBB

    .btn-icon
      width: 19px
      height: 13px

    &:hover
      color: #000000

  &-label
    color: #000000
    font-weight: 500
    font-size: 14px
    line-height: 17px
    display inline-block

  &-cell
    margin-bottom: 20px

    &.__mb-34
      margin-bottom: 34px

    .popup-link
      float right

  &-input
    clear both
    margin-top: 8px
    position: relative


.check
  position: relative
  display inline-block

  &-icon
    z-index: 1
    position: absolute
    top: 4px
    left: 2px
    display none
    fill: #ffff
    width: 18px
    height: 12px
    pointer-events none

  &-text
    min-height 20px
    cursor: pointer
    position: relative
    padding-left: 32px
    display block
    font-size: 14px
    line-height: 17px
    color: #3B3C3D

    &::before
      content: ''
      position: absolute
      top: 0
      left: 0
      width: 20px
      height: 20px
      border: 1px solid #E41D1D
      box-sizing: border-box
      border-radius: 4px

  input:checked
    ~ .check-text::before
      background: #E41D1D

    ~ .check-icon
      display block


