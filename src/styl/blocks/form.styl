.input
  width 100%
  padding 12px 20px
  transition color .3s, background-color .3s, border-color .3s

  &-icon
    position absolute
    top 50%
    left 20px
    margin-top -8px
    width 16px
    height 16px

    img
      display block
      max-width 100%

    + .input
      padding-left 50px

  &.__offset-8
    margin-top 8px
    margin-bottom -4px

  &.__s-40
    height 40px

  &.__s-45
    height 45px

  &.__s-90
    height 90px

  &.__s-100p
    height 100%

  &-transp
    background none
    border 0

  &-white
    background #FFF
    border 1px solid #E8E8E8

    &.__error
      border-color $red

textarea.input
  custom_scroll(rgba(0, 0, 0, .25))
  resize none

.select
  select
    opacity 0

    &.__error + .select2-container .select2-selection
      border-color $red

  .select2-results__option-icon,
  .select2-selection__value-icon
    padding-right 15px

    img
      display block
      width 16px

  .select2-results__option-value
    display flex
    align-items center

  .select2-results__option
    padding 11px 20px
    background #EFEFEF
    border-radius 0

    + .select2-results__option
      border-top 1px solid #E8E8E8

    &.select2-results__option--selected
      font-weight bold

  .select2-dropdown
    border-color #E8E8E8

  .select2-selection
    .select2-selection__value
      display flex
      align-items center

    .select2-selection__rendered
      padding 5px 40px 5px 20px
      position relative

      &:hover
        .select2-selection__chevron
          color #000

    .select2-selection__chevron
      position absolute
      top 0
      bottom 0
      right 0
      width 40px
      transition color .3s
      color #BCBEBE

      .btn-icon
        transition transform .3s
        position absolute
        top 50%
        right 10px
        margin-top -10px
        width 20px
        height 20px

    .select2-selection__arrow
      display none

  .select2-container.select2-container--open
    .select2-selection__rendered .select2-selection__chevron
      color #000

      .btn-icon
        transform rotate(180deg)

  &.__s-40 .select2-selection
    height 40px

  &.__s-45 .select2-selection
    height 45px

  &-white .select2-selection
    border-radius 0
    background #fff
    border 1px solid #E8E8E8

.form

  &-icon
    position absolute
    top 20px
    left 20px
    width 14px;
    height 14px;
    background $red
    fill #fff
    border-radius 100%
    display flex
    align-items center
    justify-content center

    svg
      width 16px
      height 16px

  &-error
    position relative
    padding 19px 20px 19px 44px
    background #FEEDED
    border 1px solid $red
    font-size 14px
    line-height 17px
    color $red
    margin-bottom 32px

  &-password__eye
    cursor pointer
    position absolute
    top 11px
    right 20px
    height 20px
    width 20px
    color #BBBBBB

    &::before
      content ''
      position absolute
      top -10px
      bottom -10px
      left -10px
      right -10px

    .btn-icon
      width 20px
      height 20px

      &.__hide
        display none

    &.__open
      .btn-icon
        &.__hide
          display block

        &.__open
          display none

    &:hover
      color #000

  &-label
    color #000
    font-weight 500
    font-size 14px
    line-height 17px
    display inline-block

  &-row
    +above($tab)
      display grid
      padding-bottom 5px
      grid-template-columns 1fr 1fr
      gap 30px

  &-cell
    margin-bottom 20px

    &__tip
      padding 5px 0
      font-size 12px
      line-height 15px
      color $gray

    &.__mb-34
      margin-bottom 34px

    .popup-link
      float right

  &-input
    clear both
    margin-top 8px
    position relative

    &__error
      padding-top 10px
      color $red

    .autocomplete-no-suggestion
      padding 11px 20px;
      background #efefef;
      border-radius 0;

    .autocomplete-suggestions
      position absolute
      top 100%
      right 0
      left 0
      z-index 2
      overflow-y auto
      max-height Min(400px, 60vh)
      custom_scroll(rgba(0, 0, 0, .25))

      .select2-results__option
        &.autocomplete-selected
          font-weight 700
          background-color #5897fb
          color #fff

      .popup &
        +below($tab - 1px)
          top auto
          bottom 100%

.check
  position relative
  display inline-block

  &-icon
    z-index 1
    position absolute
    top 3px
    left 1px
    display none
    fill #fff
    width 18px
    height 14px
    pointer-events none

  &-text
    min-height 20px
    cursor pointer
    position relative
    padding-left 32px
    display flex
    align-items center
    font-size 14px
    line-height 17px
    color #3B3C3D

    &::before
      content ''
      position absolute
      top 0
      left 0
      width 20px
      height 20px
      border 1px solid $red
      box-sizing border-box
      border-radius 4px

  input:checked
    ~ .check-text::before
      background $red

    ~ .check-icon
      display block


