*
  box-sizing border-box

  &::before,
  &::after
    box-sizing border-box

ul
  list-style none
  padding 0
  margin 0

a
  text-decoration none
  transition color .3s

html
  overflow-x clip
  margin-right 0 !important
  custom_scroll(rgba(0, 0, 0, .25))

  &.__map-aside:root,
  &.__page-aside:root
    --menu-currency-height 48px

    +between($wide, $wide + $menu_extra * 2 - 1px)
      --header-search-height 48px

  &.__map-aside:root
    --header-mob-height 60px

  &.__no-currency:root
    --menu-currency-height 0

body
  width 100vw
  overflow-x clip
  position relative
  font 14px $fontInter
  background $menu_bg_clr

  .__error_page &
    background #f8f6f3

    .page
      padding-top 30vh

      .content
        padding-top 0

  &.open_menu
    +below($tab - 1px)
      overflow hidden

  //&::after
  //  content ''
  //  position absolute
  //  top 0
  //  left 0
  //  right 0
  //  height 130px
  //  z-index -1
  //  pointer-events none
  //  background $menu_bg_clr

  &::before
    position absolute
    top 0
    opacity 0
    content 'mobile'

  +above($tab)
    &::before
      content 'desktop'

.page
  min-height var(--app-height)
  display flex
  flex-flow column nowrap
  position relative

  .__map-aside &
    overflow hidden

  +below($tab - 1px)
    overflow hidden

  &-overlay
    position absolute
    top calc(-1 * var(--app-page-overlay-offset))
    left 0
    right 0
    background rgba(0, 0, 0, .75)
    z-index 1001
    opacity 0
    height 0
    transition opacity .3s, height .3s
    pointer-events none

    +above($tab)
      .open_autocomplete &
        z-index 1000
        pointer-events all
        opacity 1
        max-height unset !important
        height calc(var(--app-height) + var(--app-page-overlay-offset) + var(--sat))

    +below($tab - 1px)
      .__map-aside.__article-aside-open &
      .__map-aside.__map-aside-open &
      //.__map-aside.__show-map-2 &
        z-index 1005
        pointer-events all
        opacity 1
        height calc(var(--header-mob-height) + var(--map-tags-height) + var(--app-page-overlay-offset) + var(--map-article-offset) + var(--sat))

      .__map-aside.__mode-map-2 &
        max-height calc(var(--header-mob-height) + var(--map-tags-height) + var(--app-page-overlay-offset) + var(--sat))

.content
  position relative
  flex 1 0 auto
  transition padding-right .3s
  display flex
  flex-flow column nowrap
  //overflow hidden

  +below($tab - 1px)
    padding-top var(--header-mob-height)

  +above($wide_1600)
    .__page-aside &
      padding-right calc(var(--home-aside-width) + var(--app-scroll-size))

.section
  position relative
  padding 0 20px
  margin 0 auto
  width 100%
  max-width $content_max_width

  &:only-child
    flex 1 0 auto

  &::after,
  &::before
    content ''
    position absolute
    width 100vw
    top 0
    bottom 0
    background inherit
    z-index -1

  &::before
    left 100%

  &::after
    right 100%

  &.__content
    padding-top 32px
    padding-bottom 32px

    +above($tab)
      padding-top 48px
      padding-bottom 48px

    +between($wide, $wide + $menu_extra * 2 - 1px)
      .__page-aside &
        padding-top 32px
        padding-bottom 32px

  &.__title
    padding-top 20px
    padding-bottom 20px

    +desktop()
      padding-top 16px
      padding-bottom 10px

  &.__black
    z-index 1
    background $menu_bg_clr

    .section-title
      color #fff

    + .aside-holder
      +desktop()

        .hero-aside
          padding-top 20px

  &.__map
    z-index 0
    position relative
    height 641px
    max-height 75vh
    max-width unset

    +above($tab)
      height 480px

    +desktop()
      height 600px

  &.__spacer
    min-height 30px

    +above($tab)
      min-height 50px

    +above($wide)
      min-height 65px

  &.__gray
    background rgba(34, 34, 34, 0.75)

  &.__white
    //background #E5E5E5
    background #f8f6f3

  &.__aside-space
    +desktop()
      margin-right 392px

  &.__article
    + .__article
      padding-top 0 !important

      .article
        &::before
          content ''
          position absolute
          bottom 100%
          margin-bottom 30px
          height 12px
          width 100vw
          left 50%
          transform translateX(-50%)
          background #EBE9E7

          +above($tab)
            margin-bottom 44px

        h1
          margin-top 0

    +desktop()
      max-width 1208px

      .section-title
        font-size 28px
        line-height 37px
        margin-bottom 15px

  +above($tab)
    padding 0 30px

  &-border
    content ''
    position absolute
    height 1px
    top 0
    right 0
    left 0
    background #E4E4E4

  &-title
    margin-bottom 12px
    font bold 24px / 32px $fontPTSerif
    color #000
    display flex
    align-items flex-end
    justify-content space-between
    flex-wrap wrap

    &.text-center
      justify-content center

    > span
      padding-right 10px

    &__hero
      .__page-aside &
        +below($tab)
          margin-top -5px
          font-size 24px
          line-height 32px

    &__link
      font 500 14px/21px $fontInter
      letter-spacing -0.02em
      margin-bottom 2px
      color #000
      display flex
      align-items center

      +above($tab)
        margin-bottom 6px

      .btn-icon
        fill $red
        transform rotate(180deg)
        width 16px
        height 16px
        margin-left 6px

      &:hover
        color $red

    +above($tab)
      font-size 28px
      line-height 37px
      margin-bottom 16px

      &.__partner
        font-size 36px
        line-height 48px

    +desktop()
      font-size 36px
      line-height 48px
      margin-bottom 24px

    +between($wide, $wide + $menu_extra * 2 - 1px)
      .__page-aside &
        font-size 28px
        line-height 37px
        margin-bottom 16px

.nav
  display flex
  justify-content center

  > li
    position relative

    +below($tab - 1px)
      &.__opened
        > .nav-link .btn-icon
          color #fff
          transform rotate(180deg)

        .nav-dropdown
          display block

    +above($tab)
      &:hover
        > .nav-link .btn-icon
          color #fff
          transform rotate(180deg)

        .nav-dropdown
          display block

  &-dropdown
    display none

    li
      border-top 1px solid #444

    +below($tab - 1px)
      li
        .nav-link
          padding-left 16px !important

    +above($tab)
      min-width 200px
      padding-top: 4px
      top 100%
      right -30px
      position absolute
      white-space nowrap

      li
        background #323232

        .nav-link
          padding 16px 16px 14px !important

        &:first-child
          border-top 0

  .nav-link
    cursor pointer
    color #fff
    padding 10px 0
    position relative
    display flex

    .btn-icon
      transition transform .3s, color .3s
      color $gray
      width 16px
      height 16px
      margin-left 8px

      +below($tab - 1px)
        margin-right: -18px
        margin-left: auto

  a.nav-link:hover
    color $red

  +below($mob_menu - 1px)
    flex-flow column
    padding-bottom 20px

.fw-500
  font-weight 500

.fw-600
  font-weight 600

.fw-700
  font-weight 700

.fw-800
  font-weight 800

.clr-gray
  color $gray

.clr-red
  color $red

.mob-hide
  +below($tab - 1px)
    display none !important

.mob-only
  +above($tab)
    display none !important

.dt-hide
  +above($dt)
    display none !important

.dt-only
  +below($dt - 1px)
    display none !important

.wide-hide
  +above($wide)
    display none !important

.exwide-hide
  +above($wide + $menu_extra * 2)
    display none !important

.hero-wide-hide
  +above($wide + $menu_extra)
    display none !important

.wide-only
  +below($wide - 1px)
    display none !important

.text-center
  text-align center

.hide
  display none
