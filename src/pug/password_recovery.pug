          tr
            td(style='vertical-align:middle; text-align:center;')
              .logo(style='padding: 8px 32px; background:#000; color:#fff; display:inline-block; font-weight: 700; font-size: 38px;line-height: 50px; font-family: "PT Serif", serif;') NOAM.RU

          tr
            td
